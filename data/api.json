[
  {
    "name": "获取员工项目信息",
    "description": "根据员工ID获取员工项目组及请假加班信息",
    "method": "GET",
    "endpoint": "http://172.24.6.47/api/v1/pageInfo4LOM",
    "params": [
      { "name": "staffId", "type": "string", "required": false, "description": "员工ID" }
    ],
    "response": {
      "projectId": "string, 项目ID",
      "projectName": "string, 项目名称",
      "reportTo": "string, 汇报对象ID",
      "projectManager": "string, 项目经理ID",
      "leave_records": [
        {
          "leaveId": "string, 请假记录ID",
          "type": "string, 请假类型",
          "status": "string, 审批状态"
        }
      ],
      "overtime_records": [
        {
          "overtimeId": "string, 加班记录ID",
          "status": "string, 审批状态"
        }
      ]
    }
  },
  {
    "name": "提交请假申请",
    "description": "提交员工的请假信息",
    "method": "POST",
    "endpoint": "http://172.24.6.47/api/v1/newleavesxiaotian",
    "params": [
      { "name": "userId", "type": "string", "required": false, "description": "员工ID" },
      { "name": "userName", "type": "string", "required": false, "description": "员工姓名" },
      { "name": "staffType", "type": "string", "required": false, "description": "员工类型（如FTE）" },
      { "name": "projectId", "type": "string", "required": false, "description": "项目ID" },
      { "name": "projectName", "type": "string", "required": false, "description": "项目名称" },
      { "name": "reportTo", "type": "string", "required": false, "description": "汇报对象ID" },
      { "name": "projectManager", "type": "string", "required": false, "description": "项目经理ID" },
      { "name": "onsiteManager", "type": "string", "required": false, "description": "现场经理ID（可为空）" },
      { "name": "account", "type": "string", "required": false, "description": "账号/BU名称" },
      { "name": "type", "type": "string", "required": true, "description": "请假类型（如ANNUAL_LEAVE）" },
      { "name": "fromDate", "type": "string", "required": true, "description": "开始日期（格式YYYY-MM-DD）" },
      { "name": "toDate", "type": "string", "required": true, "description": "结束日期（格式YYYY-MM-DD）" },
      { "name": "leaveDays", "type": "string", "required": false, "description": "请假天数，可根据请假开始日期和结束日期计算" },
      { "name": "startFromTime", "type": "string", "required": false, "description": "开始时间段起（默认0900）" },
      { "name": "startToTime", "type": "string", "required": false, "description": "开始时间段止（默认1800）" },
      { "name": "endFromTime", "type": "string", "required": false, "description": "结束时间段起（默认0900）" },
      { "name": "endToTime", "type": "string", "required": false, "description": "结束时间段止（默认1800）" },
      { "name": "reason", "type": "string", "required": true, "description": "请假原因" }
    ],
    "response": {
      "success": "boolean, 是否成功",
      "leaveId": "string, 新创建的请假记录ID",
      "status": "string, 当前状态（如PENDING）"
    }
  },
  {
    "name": "提交加班申请",
    "description": "提交员工的加班申请",
    "method": "POST",
    "endpoint": "http://172.24.6.47/api/v1/newovertimesubmitxiaotian",
    "params": [
      { "name": "userId", "type": "string", "required": false, "description": "员工ID" },
      { "name": "userName", "type": "string", "required": false, "description": "员工姓名" },
      { "name": "staffType", "type": "string", "required": false, "description": "员工类型" },
      { "name": "from", "type": "string", "required": true, "description": "加班开始时间（如1400）" },
      { "name": "to", "type": "string", "required": true, "description": "加班结束时间（如1700）" },
      { "name": "hours", "type": "string", "required": false, "description": "加班小时数，可根据加班开始时间和加班结束时间计算" },
      { "name": "type", "type": "string", "required": false, "description": "加班类型，根据加班时间和加班日期推算" },
      { "name": "reason", "type": "string", "required": true, "description": "加班原因" },
      { "name": "overTimeDate", "type": "string", "required": true, "description": "加班日期（格式YYYY-MM-DD）" },
      { "name": "compensationWay", "type": "string", "required": true, "description": "补偿方式（如SHIFT_LEAVE）" },
      { "name": "projectId", "type": "string", "required": false, "description": "项目ID" },
      { "name": "projectName", "type": "string", "required": false, "description": "项目名称" },
      { "name": "reportTo", "type": "string", "required": false, "description": "汇报对象ID" },
      { "name": "projectManager", "type": "string", "required": true, "description": "项目经理ID" },
      { "name": "onsiteManager", "type": "string", "required": false, "description": "现场经理ID（可为空）" },
      { "name": "account", "type": "string", "required": false, "description": "账号/BU名称" }
    ],
    "response": {
      "success": "boolean, 是否成功",
      "overtimeId": "string, 新创建的加班记录ID",
      "status": "string, 当前状态（如PENDING）"
    }
  },
  {
    "name": "查询员工历史请假记录",
    "description": "查询员工历史请假记录，所有字段必传",
    "method": "POST",
    "endpoint": "/api/v1/leavehistory",
    "params": [
      { "name": "projectId", "type": "integer", "required": true, "description": "项目ID（0为所有项目）" },
      { "name": "startTime", "type": "string", "required": true, "description": "开始时间（格式YYYYMMDD）" },
      { "name": "endTime", "type": "string", "required": true, "description": "结束时间（格式YYYYMMDD）" },
      { "name": "staffId", "type": "string", "required": true, "description": "员工ID" },
      { "name": "leaveType", "type": "string", "required": true, "description": "请假类型（10表示全部）" },
      { "name": "status", "type": "string", "required": true, "description": "请假状态（10表示全部）" },
      { "name": "rowCount", "type": "integer", "required": true, "description": "返回记录条数" },
      { "name": "pageIndex", "type": "integer", "required": true, "description": "页码" }
    ],
    "response": {
      "total": "number, 符合条件的总记录数",
      "pageIndex": "number, 当前页码",
      "rowCount": "number, 本页记录数",
      "records": [
        {
          "leaveId": "string, 请假记录ID",
          "type": "string, 请假类型",
          "fromDate": "string, 开始日期",
          "toDate": "string, 结束日期",
          "days": "number, 请假天数",
          "status": "string, 审批状态（APPROVED/REJECTED/PENDING）",
          "approver": "string, 审批人ID"
        }
      ]
    }
  },
  {
    "name": "查询员工历史加班记录",
    "description": "查询员工历史加班记录，所有字段必传",
    "method": "POST",
    "endpoint": "http://172.24.6.47/api/v1/overtimehistory",
    "params": [
      { "name": "projectId", "type": "integer", "required": true, "description": "项目ID（0为所有项目）" },
      { "name": "startTime", "type": "string", "required": true, "description": "开始时间（格式YYYYMMDD）" },
      { "name": "endTime", "type": "string", "required": true, "description": "结束时间（格式YYYYMMDD）" },
      { "name": "staffId", "type": "string", "required": true, "description": "员工ID" },
      { "name": "otType", "type": "string", "required": true, "description": "加班类型（4表示全部）" },
      { "name": "applyFor", "type": "string", "required": true, "description": "补偿方式（3表示全部）" },
      { "name": "status", "type": "string", "required": true, "description": "加班状态（7表示全部）" },
      { "name": "rowCount", "type": "integer", "required": true, "description": "返回记录条数" },
      { "name": "pageIndex", "type": "integer", "required": true, "description": "页码" }
    ],
    "response": {
      "total": "number, 符合条件的总记录数",
      "pageIndex": "number, 当前页码",
      "rowCount": "number, 本页记录数",
      "records": [
        {
          "overtimeId": "string, 加班记录ID",
          "date": "string, 加班日期",
          "hours": "number, 加班小时数",
          "type": "string, 加班类型",
          "compensationWay": "string, 补偿方式",
          "status": "string, 审批状态"
        }
      ]
    }
  }
]
